<%- include("partials/header"); -%>
<%if(currentUser && currentUser.isAdmin==true){%>
	<h1>You are Admin</h1>
<%}%>
<header class="jumbotron">
	<div class='container'>
		<h1>
		Welocome to CP ❤️!

		</h1>
		<p>
			Got A Doubt We have solution-> Discuss
		</p>
	
		<p>
			<a class='btn btn-danger btn-large'href='/pages/new'>Post New Article</a>
		</p>
	</div>	
	
</header>
	<div class='row text-centre' style='display:flex; flex-wrap:wrap;'>
		<% if(noMatch!==null){ %>
			<div class="col-md-12 text-centre">
				<h1><%= noMatch %></h1>
			</div>
			<p>
				<form action="/pages" method="GET" class="form-inline">
					<div class="form-group">
					  <input type="text" name="search" placeholder="Pages search..." class="form-control">
					  <input type="submit" value="Search" class="btn btn-outline-success" style="margin-left:.3em">
					</div>
				  </form>
			</p>			
		<% } %>
		<% posts.forEach(function(cg){ %>
		<div class='col-md-3 col-sm-6'>
			<div class="card">
                <img src="<%= cg.image %>" class="card-img-top" alt="added by user">
                <div class="card-body">
                  <h5 class="card-title"><%= cg.title %></h5>
                  <p class="card-text"><%= cg.text.substring(0,50) %></p>
                </div>
                <div class="card-footer">
                  <small class="text-muted">Last updated <%=cg.date %></small>
                  <a href='/pages/<%=cg._id%>' class='btn btn-danger text-center'>More Info</a>
                </div>
              </div>
		</div>
		<% }); %>		
			</div>
			
	</div>


<%- include("partials/footer"); -%>

