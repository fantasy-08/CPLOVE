<%- include("../partials/header"); -%>

<div class='container-fluid'>
	<h1>
	Forgot Something?
    </h1>
    <h4>Fix <%=posts.title %>!</h4>
    <form action='/pages/<%=posts._id%>?_method=PUT' method='POST' class='form-group'>
        <div class='form-group' style="margin:25px auto; width 30%;">
            <input type='form-control' type="text" name='title' value='<%= posts.title%>' class='form-control'>
        </div>
        <div class='form-groupl'>
            <input type='form-control'  type="text" name='image' value='<%= posts.image%>' class='form-control'>
        </div>
        <div class='form-group'style="margin:25px auto; ">
            <input type='form-control' type="text" name='text' value='<%= posts.text%>' class='form-control'>
        </div>
        <button type='submit'class="btn btn-danger " >
            Update
        </button>
    </form>
    <br><br><br>
    <a href='/pages'class="btn btn-primary btn-lg active right" role="button">GO BACK</a>
</div>

<%- include("../partials/footer"); -%>